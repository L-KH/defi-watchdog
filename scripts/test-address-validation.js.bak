      console.log(`${hasCode ? 'âœ…' : 'âŒ'} ${address}: ${hasCode ? 'HAS CONTRACT CODE' : 'NO CODE (EOA)'}`);
    } catch (error) {
      console.log(`âŒ ${address}: ERROR - ${error.message}`);
    }
  }
  
  console.log('\\nğŸ¯ Recommendation: Use 0x742d35Cc6634C0532925a3b8D42C5D7c5041234d as fallback');
  console.log('ğŸ’¡ This is a verified DEX contract on Linea with deployed code');
